{
  "python.defaultInterpreterPath": "src\\engine\\.venv\\Scripts\\python.exe",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestPath": "src\\engine\\.venv\\Scripts\\pytest.exe",
  "python.testing.cwd": "${workspaceFolder}\\src\\engine",
  "python.testing.pytestArgs": [
    "--verbose",
    "--tb=short",
    "--strict-markers",
    "--strict-config"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.debugPort": 3000,
  "testing.automaticallyOpenPeekView": "failureInVisibleDocument",
  "testing.followRunningTest": true,
  "testing.gutterEnabled": true,
  "testing.saveBeforeTest": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "terminal.integrated.cwd": "${workspaceFolder}",
  "files.associations": {
    "**/test_*.py": "python",
    "**/*_test.py": "python",
    "**/tests/**/*.py": "python"
  },
  "vitest.workspaceConfig": "${workspaceFolder}/src/frontend/vitest.config.ts",
  "vitest.commandLine": "cd src/frontend && bun test",
  "vitest.nodeEnv": {},
  "vitest.include": ["**/*.{test,spec}.{js,mjs,cjs,ts,mts,cts,jsx,tsx}"],
  "vitest.exclude": ["**/node_modules/**", "**/dist/**", "**/.{idea,git,cache,output,temp}/**"]
}